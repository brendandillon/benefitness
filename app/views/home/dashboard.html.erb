<div class='row'>
  <div class='six columns'>
    <h3>Benefitness</h3>
  </div>
</div>

<div class='row'>
  <div class="four columns">
    <%= form_for :session, url: sessions_path do |f| %>
      <%= f.text_field :email, placeholder: 'Email', class:'u-full-width' %>
      <%= f.password_field :password, placeholder: 'Password', class:'u-full-width' %>
      <%= f.submit 'Log in' %>
    <% end %>
    <%= link_to "Create Account", new_user_path, class: 'button button-primary' %>
  </div>
</div>
